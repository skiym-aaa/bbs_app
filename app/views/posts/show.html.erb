<div class="row">
  <div class="col-xs-12">

    <div class="masonry-wrapper-cols">
      <div class="row">
        <div class="col-md-10 col-sm-offset-1">

          <div class="masonry-block">

            <div class="block-content">

              <div class="post-title">
                <h3><%= @post.title %></h3>
              </div>

              <br>
              <div class="post-url">
                元記事URL：<%= link_to @post.article_url, @post.article_url %>
              </div>

              <br>
              <div class="post-body">
                <%= @post.body %>
              </div>

              <br>
              <div class="post-category">
                <% @post.categories.each do |category| %>
                  <span class="label label-primary"><%= category.name %></span>
                <% end %>
              </div>

              <br>
              <div class="post-user">
                <p>By<%= link_to @post.user.name, user_path(@post.user) %>　<%= l @post.created_at %></p>
              </div>

            </div>
          </div>

        </div>
      </div>
    </div>

  </div>
</div>

<hr>
<div class="row">
  <div class="col-xs-12">
    <%= render 'post_responses/responses', post: @post, post_response: @post_response %>
  </div>
</div>


