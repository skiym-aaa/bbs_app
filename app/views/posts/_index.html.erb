<% if posts.empty? %>

  <p>投稿はありません</p>

<% else %>

  <div class="masonry-wrapper-cols">
    <div class="row">
      <div class="col-md-10 col-sm-offset-1">
        <% posts.each do |post| %>
          <div class="masonry-block">

            <div class="block-content">

              <div class="post-title">
                <%= link_to post_path(post) do %>
                  <h3><%= post.title %></h3>
                <% end %>
              </div>

              <br>
              <div class="post-url">
                元記事URL：<%= link_to post.article_url, post.article_url %>
              </div>

              <br>
              <div class="post-body">
                <%= post.body %>
              </div>

              <br>
              <div class="post-category">
                <% post.categories.each do |category| %>
                  <span class="label label-primary"><%= category.name %></span>
                <% end %>
              </div>

              <br>
              <div class="post-user">
                <p>By<%= link_to post.user.name, user_path(post.user) %>　<%= l post.created_at %></p>
              </div>

              <div class="post-comment-count">
                <p><span class="glyphicon glyphicon-comment"></span> <%= post.post_response_ids.count %></p>
              </div>

            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>

<% end %>