<div class="row">
  <div class="col-xs-12 center">

    <h3>プロフィール編集</h3>

    <div class="user-profile">
      <%= form_for(@user) do |f| %>
        <%= render 'layouts/errors', obj: @user %>

        <%= attachment_image_tag(@user, :image, :fill, 200, 200, fallback: "no_image.jpg") %>
        <div class="field">
          <%= f.attachment_field :image, class: "user_image" %>
        </div>

        <br>
        <div class="field">
          <%= f.text_field :name, class: "name", size: "41x10", placeholder: "名前" %>
        </div>

        <div class="field">
          <%= f.text_area :introduction, class: "introduction", size: "40x5", placeholder: "プロフィール" %>
        </div>

        <div class="actions">
          <%= f.submit "更新する", class: "btn btn-default" %>
        </div>

      <% end %>
    </div>

  </div>
</div>
