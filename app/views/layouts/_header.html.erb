<div class="logo">
  <%= link_to root_path do %>
    <h2>BBS</h2>
  <% end %>
</div>

<header class="navbar navbar-default">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-right">

        <% if user_signed_in? %>
          <li><%= link_to " 新規投稿",new_post_path, class: "glyphicon glyphicon-plus" %></li>
          <li><%= link_to " マイページ",user_path(current_user), class: "glyphicon glyphicon-home" %></li>
          <li><%= link_to " ログアウト",destroy_user_session_path, method: :delete, class: 'glyphicon glyphicon-log-out logout' %></li>

        <% else %>
          <li><%= link_to " 新規登録",new_user_registration_path, class: 'glyphicon glyphicon-edit sign_up' %></li>
          <li><%= link_to " ログイン", user_session_path, class: "glyphicon glyphicon-log-in" %></li>
        <% end %>
      </ul>

      <% if current_page?(root_path) %>
        <form class="navbar-form navbar-left" role="search">
          <div class="search-form-group">
            <%= search_form_for @q, url: posts_path do |f| %>
              <%= f.text_field :title_or_post_responses_body_cont ,placeholder: '検索' %>
              <%= f.submit "検索", class: "btn btn-default" %>
            <% end %>
          </div>
        </form>
      <% end %>

    </nav>

  </div>
</header>